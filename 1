  <script>
    // Tiny progressive enhancement: waitlist form (stores locally + mailto fallback)
    (function () {
      const form = document.getElementById('waitlist');
      const year = document.getElementById('year');
      if (year) year.textContent = new Date().getFullYear();

      form?.addEventListener('submit', function (e) {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(form).entries());
        try {
          const key = 'ridenow_waitlist';
          const existing = JSON.parse(localStorage.getItem(key) || '[]');
          existing.push({ ...data, ts: new Date().toISOString() });
          localStorage.setItem(key, JSON.stringify(existing));
        } catch {}
        const mail = encodeURIComponent(
          `Please add me to the waitlist.\n\nName: ${data.name}\nEmail: ${data.email}\nRole: ${data.role}\n`
        );
        window.location.href = `mailto:hello@ridenow.app?subject=Waitlist&body=${mail}`;
      });
    })();
  </script>
